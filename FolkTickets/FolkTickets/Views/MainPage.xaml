<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FolkTickets"
             x:Class="FolkTickets.Views.MainPage"
             Title="Main Page">
    <StackLayout>
        <Label Text="Welcome to Xamarin Forms!" 
           VerticalOptions="Center" 
           HorizontalOptions="Center"
               x:Name="WelcomeLabel"/>
        <Entry Placeholder="WP Login"
               x:Name="Login"/>
        <Entry Placeholder="WP Password"
               IsPassword="True"
               x:Name="Password"/>
        <Button Text="Login"
                x:Name="ButtonLogin"
                Clicked="ButtonLogin_Clicked"/>
    </StackLayout>
</ContentPage>